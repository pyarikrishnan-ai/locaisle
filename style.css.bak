/* ============================= */
/* LocAIsle Professional Style   */
/* ============================= */

/* ----- Color Variables ----- */
:root {
  --primary: #2563eb;    /* blue */
  --secondary: #7c3aed;  /* purple */
  --accent: #10b981;     /* green */
  --text-main: #0f172a;
  --text-muted: #475569;
  --border-light: #e5e7eb;
  --bg-soft: #f9fafb;
}

/* ----- Global Styles ----- */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  scroll-behavior: smooth;
}

body {
  background: #ffffff;
  color: var(--text-main);
  line-height: 1.6;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
               Roboto, Helvetica, Arial, sans-serif;
}

/* ----- Header / Navigation ----- */
header {
  background: #ffffff;
  padding: 18px 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--border-light);
  position: sticky;
  top: 0;
  z-index: 100;
}

header h1 {
  font-size: 22px;
  font-weight: 700;
  color: var(--primary);
}

nav a {
  color: var(--text-muted);
  margin-left: 24px;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s ease;
}

nav a:hover {
  color: var(--primary);
}

/* ----- Hero Section ----- */
.hero {
  text-align: center;
  padding: 80px 40px;
}

.hero h2 {
  font-size: 44px;
  font-weight: 700;
  letter-spacing: -0.02em;
}

.hero span {
  background: linear-gradient(
    90deg,
    var(--primary),
    var(--secondary),
    var(--accent)
  );
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.hero p {
  font-size: 18px;
  margin-top: 20px;
  color: var(--text-muted);
}

.button {
  display: inline-block;
  margin-top: 28px;
  padding: 14px 34px;
  background: linear-gradient(
    90deg,
    var(--primary),
    var(--secondary)
  );
  color: #ffffff;
  border-radius: 999px;
  text-decoration: none;
  font-weight: 600;
  box-shadow: 0 8px 25px rgba(37, 99, 235, 0.25);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.button:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 35px rgba(37, 99, 235, 0.35);
}

/* ----- Sections ----- */
section {
  padding: 80px 40px;
  max-width: 1100px;
  margin: auto;
  animation: fadeUp 0.6s ease forwards;
}

h2 {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 24px;
}

/* ----- Cards / Features ----- */
.cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 25px;
  margin-top: 40px;
}

.card {
  background: var(--bg-soft);
  padding: 26px;
  border-radius: 18px;
  border: 1px solid var(--border-light);
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 20px 40px rgba(15, 23, 42, 0.08);
}

/* ----- Footer ----- */
footer {
  background: #ffffff;
  border-top: 1px solid var(--border-light);
  text-align: center;
  padding: 30px;
  font-size: 14px;
  color: var(--text-muted);
}

/* ----- Animations ----- */
@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(12px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ----- Responsive Design ----- */
@media (max-width: 768px) {
  header {
    flex-direction: column;
    align-items: flex-start;
  }

  nav {
    margin-top: 12px;
  }

  nav a {
    margin-left: 0;
    margin-right: 16px;
  }

  .hero h2 {
    font-size: 32px;
  }

  section {
    padding: 60px 20px;
  }
}

@media (max-width: 480px) {
  .hero h2 {
    font-size: 28px;
  }

  .button {
    padding: 12px 24px;
  }
}

/* ----- Logo Thumbnail ----- */
.thumbnail {
  width: 80px;
  height: auto;
  display: inline-block;
}

@media (max-width: 480px) {
  .thumbnail {
    width: 60px;
  }
}
